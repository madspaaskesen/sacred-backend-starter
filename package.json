{
  "name": "sacred-backend-starter",
  "description": "Sacred Backend Starter. A clean and secure Node.js + Express backend starter with JWT auth, Prisma, and built-in testing.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint .",
