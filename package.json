    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.1",
    "@prisma/client": "^6.7.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.0"
  }
